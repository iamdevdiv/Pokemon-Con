#:kivy 2.0.0

#:import Gradient kivy_gradient.Gradient
#:import Animation kivy.animation.Animation
#:import get_color_from_hex kivy.utils.get_color_from_hex


<RotatableImage>:  # https://stackoverflow.com/a/17699932/14113019
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix


<RoundedButton>:
    rounded_btn_img: rounded_btn_img

    background_color: (0,0,0,0)
    background_normal: ''

    on_press: if root.manager.get_screen("Login Screen").intro_completed: Animation(scale_value_x=.9, scale_value_y=.95, d=.03).start(self)
    on_touch_up: if root.manager.get_screen("Login Screen").intro_completed: Animation(scale_value_x=1, scale_value_y=1, d=.03).start(self)

    canvas.before:
        Color:
            rgb: 1, 1, 1
        PushMatrix
        Scale:
            x: self.scale_value_x
            y: self.scale_value_y
            origin: self.center

    canvas.after:
        PopMatrix

    RotatableImage:
        id: rounded_btn_img
        source: root.img_source
        size: root.height, root.height - dp(root.img_height_subtractor)
        keep_ratio: False
        allow_stretch: True
        center: self.parent.pos[0] + (self.width / root.img_width_divisor), self.parent.center_y

    Label:
        text: root.label_text
        color: root.label_color
        font_size: self.parent.height / 1.2
        font_name: "Fonts/av_qest.ttf"
        center: self.parent.center_x + (rounded_btn_img.width / 2) - dp(root.label_center_x_subtractor), self.parent.center_y


<LoadingScreen>:
    loading_bar: loading_bar

    Widget:
        opacity: .6
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "Images/loading.jpg"

        Label:
            text: "Loading..."
            size: self.texture_size
            font_size: sp(20)
            center: root.center_x, 0 + self.height
            font_name: "Fonts/neuropol_x.ttf"

    Widget:
        id: loading_bar
        size_hint_x: None
        width: 0
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: 0, 0
                size: loading_bar.width, dp(2)
                texture: Gradient.vertical(get_color_from_hex("00FFFF"), get_color_from_hex("099FFF"), get_color_from_hex("0062FF"), get_color_from_hex("0033FF"))


